<?xml version="1.0" encoding="UTF-8" ?>
<!-- https://logback.qos.ch/manual/configuration.html -->
<!-- https://logback.qos.ch/manual/appenders.html#FileAppender -->
<included>
    <include resource="logback-appenders-fluentd.xml"/>
    <include resource="logback-appenders-std.xml"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <!--https://logback.qos.ch/manual/layouts.html#ClassicPatternLayout-->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} #%line - %msg%n</pattern>
        </encoder>
    </appender>
</included>
